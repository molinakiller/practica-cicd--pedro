pipeline {
    agent {
        label('terraform-agent')
    }
    environment { 
        CC = 'clang'
    }
    stages {

        stage('Init') {
            steps {
                dir('terraform') {
                    sh 'terraform init -upgrade'
                }
            }
        }

        stage('Build'){          
	        environment {
                CREDS = credentials('google-cloud-credentials')
            }
            steps{    
	            dir('terraform'){
                    sh 'cp \$CREDS application_default_credentials.json' 
		            sh 'terraform apply --auto-approve'
		        }
	        }
	    }

    }
}

