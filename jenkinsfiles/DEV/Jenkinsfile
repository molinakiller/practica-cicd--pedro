pipeline {
    agent {
        label('terraform-agent')
    }
    stages {

        stage('Init') {
            steps {
                dir('terraform') {
                    sh 'terraform init -upgrade'
                }
            }
        }

        stage('Build'){
            enviroment {
                CREDS = credentials('google-cloud-credentials')
                sh 'echo $CREDS'
            }
	        steps{
	            dir('terraform'){
		            sh 'terraform apply --auto-approve'
		        }
	        }
	    }

    }
}

