pipeline {
    agent {
        label('terraform-agent')
    }
    stages {

        stage('Init') {
            steps {
                dir('terraform') {
                    sh 'terraform init -upgrade'
                }
            }
        }

        stage('Build'){          
	        steps{
                environment {
                    CREDS = credentials('google-cloud-credentials')
                }
	            dir('terraform'){
                    sh 'echo $CREDS'
		            sh 'terraform apply --auto-approve'
		        }
	        }
	    }

    }
}

